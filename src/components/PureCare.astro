<style>
  /* Ocultar los slides por defecto */
  input[name="carousel"]:not(:checked) + div {
    pointer-events: none;
    opacity: 0;
  }

  /* Mostrar el slide activo */
  input[name="carousel"]:checked + div {
    pointer-events: auto;
    opacity: 1;
  }

  .slide-content {
    opacity: 0;
    transition: opacity 1s;
  }

  input[name="carousel"]:checked + div .slide-content {
    opacity: 1;
  }
