          >
            <IconHome class="size-12" />
          </HeroButton>
        </div>

        <!-- slide 4 -->
        <input id="slide-4" name="carousel" type="radio" class="hidden" />
        <div
          class="absolute inset-0 flex items-center justify-center opacity-100 transition-opacity duration-500"
        >
          <label for="slide-3" class="back flex items-center justify-center">
